### etc/Renviron.  Generated from Renviron.in by configure.
###
### ${R_HOME}/etc/Renviron
###
### Record R system environment variables.

R_PLATFORM=${R_PLATFORM-'x86_64-pc-linux-gnu'}
## Default printer paper size: first record if user set R_PAPERSIZE
R_PAPERSIZE_USER=${R_PAPERSIZE}
R_PAPERSIZE=${R_PAPERSIZE-'a4'}
## Default print command
R_PRINTCMD=${R_PRINTCMD-''}
# for Rd2pdf, reference manual
R_RD4PDF=${R_RD4PDF-'times,inconsolata,hyper'}
## used for options("texi2dvi")
R_TEXI2DVICMD=${R_TEXI2DVICMD-${TEXI2DVI-'texi2dvi'}}
## used by INSTALL, untar() and installing grDevices
R_GZIPCMD=${R_GZIPCMD-'gzip'}
## Default zip/unzip commands
R_UNZIPCMD=${R_UNZIPCMD-'unzip'}
R_ZIPCMD=${R_ZIPCMD-'zip'}
R_BZIPCMD=${R_BZIPCMD-'bzip2'}
## Default browser
R_BROWSER=${R_BROWSER-'open'}
## Default editor
EDITOR=${EDITOR-${VISUAL-vi}}
## Default pager
PAGER=${PAGER-'less'}
## Default PDF viewer
R_PDFVIEWER=${R_PDFVIEWER-'open'}
## Used by libtool
LN_S='ln -s'
MAKE=${MAKE-'make'}
## Prefer a POSIX-compliant sed on e.g. Solaris
SED=${SED-'sed'}
## Prefer a tar that can automagically read compressed archives
## Used in R CMD INSTALL for binary packages
TAR=${TAR-'tar'}

## System and compiler types.
R_SYSTEM_ABI='linux,gcc,gxx,gfortran,?'

R_LIBS_USER='{{ role_r_library_user }}'

# location of the Java Home
JAVA_HOME='{{ role_r_java_home }}'

{% if role_r_hadoop_setup == "true" %}
# for hadoop client path
HADOOP_CMD='{{ role_r_hadoop_cmd }}'

# location of the jar that some R packages will need
HADOOP_STREAMING='{{ role_r_hadoop_streaming_jar }}'

#  R need hHadoop configuration
HADOOP_CONF_DIR='{{ role_r_hadoop_conf_directory }}'

# setting Hadoop Home
HADOOP_HOME='{{ role_r_hadoop_client_directory }}'

# # Setting the hadooop bin
HADOOP_BIN="{{ role_r_hadoop_client_bin_directory }}"

# Hadoop library
HADOOP_COMMON_LIB_NATIVE_DIR='{{ role_r_hadoop_client_lib_native_directory }}'
{% endif %}
{% if role_r_spark_client_directory is defined %}
# setting spark Home
SPARK_HOME='/usr/hdp/current/spark-client'
{% endif %}
